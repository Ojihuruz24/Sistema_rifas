			</MudItem>

			<MudItem sm="12" lg="6" xl="6">
				<MudTextField @bind-Value="@compraPagina.CompraPagInfoCliente.NumeroIdentificacion" Label="Numero de identificacion" HelperText="sin puntos ni comas" Variant="Variant.Filled" Required />
			</MudItem>

