				<MudTextField @bind-Value="@compraPagina.CompraPagInfoCliente.Telegram" Label="Telegram" HelperText="URL de telegram" Variant="Variant.Filled"  />
			</MudItem>
			<MudItem sm="12" lg="6" xl="6">
				<MudTextField @bind-Value="@compraPagina.CompraPagInfoCliente.Tiktok" Label="TikTok" HelperText="URL de tiktok" Variant="Variant.Filled"  />
			</MudItem>

