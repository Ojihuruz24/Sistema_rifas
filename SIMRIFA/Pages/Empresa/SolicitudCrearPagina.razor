	[Inject]
	private IConexionApi<TipoCliente, TipoCliente> TipoClienteApi { get; set; }
	private TipoIdentificacion seleccionado = new();
	private string SelectedOption { get; set; }
	private string SelectTipoPago { get; set; }
	private string HelperText { get; set; }
	Dictionary<string, IBrowserFile> _files = new Dictionary<string, IBrowserFile>();
	private bool DeshabilitarBottonBanner { get; set; } = false;

	private List<TipoCliente> tipoClientes = new List<TipoCliente>();


	private CompraPagina compraPagina { get; set; }

	protected override async Task OnInitializedAsync()
	{
		compraPagina = new CompraPagina();
		compraPagina.CompraPagInfoCliente = new CompraPagInfoCliente();
		compraPagina.CompraPagInfoPagina = new CompraPagInfoPagina();
		MenuState.SetMenuVisibility(true);
	}

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			tipoClientes = (await TipoClienteApi.GetAll("TipoCliente")).ToList();
			await base.OnAfterRenderAsync(firstRender);
		}
	}



	public async Task ObtenerIdentificacion(TipoIdentificacion values)
	{
		if (values != null)
		{
			compraPagina.CompraPagInfoCliente.IdTipoIdentificacion = values.ID_TIPO_IDENTIFICACION;

		}
	}

	public async Task ObtenerMunicipio(Municipio values)
	{
		if (values != null)
		{
			compraPagina.CompraPagInfoCliente.Pais = "CO";
			compraPagina.CompraPagInfoCliente.Municipio = values.COD_MUNICIPIO;
		}
	}

	public async Task FechaSorteoChanged(DateTime values)
	{
		if (values != null)
		{
			compraPagina.CompraPagInfoPagina.FechaSorteo = values;
		}
	}

	private void SubirDocumentoEvidencia(IBrowserFile file)
	{
		if (!file.ContentType.EndsWith("pdf"))
		{
			Snackbar.Clear();
			Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
			Snackbar.Add($"{file.Name} Con Extension no permitida", Severity.Error);
			return;
		}

		if (file.Size > 1048576)
		{
			Snackbar.Clear();
			Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
			Snackbar.Add($"Tamaño maximo es 1MB", Severity.Warning);
			Snackbar.Add($"{file.Name} con {file.Size} byte", Severity.Warning);
			return;
		}


		_files.Add("Evidencia", file);

		Snackbar.Clear();
		Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
		Snackbar.Add($"{file.Name} Cargado correctamente", Severity.Success);

	}

	private void EliminarEvidencia(IBrowserFile file)
	{
		_files.Remove("Evidencia");
	}

	private void SubirLogo(IBrowserFile file)
	{
		if (!file.ContentType.EndsWith("jpeg") && !file.ContentType.EndsWith("jpg") && !file.ContentType.EndsWith("png"))
		{
			Snackbar.Clear();
			Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
			Snackbar.Add($"{file.Name} ConExtension no permitida", Severity.Error);
			return;
		}

		if (file.Size > 512000)
		{
			Snackbar.Clear();
			Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
			Snackbar.Add($"Tamaño maximo es 500KB", Severity.Warning);
			Snackbar.Add($"{file.Name} con {file.Size} byte", Severity.Warning);
			return;
		}

		_files.Add("Logo", file);

		Snackbar.Clear();
		Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
		Snackbar.Add($"{file.Name} Cargado correctamente", Severity.Success);
	}

	private void EliminarLogo(IBrowserFile file)
	{
		_files.Remove("Logo");
	}

	private void SubirBanner(IBrowserFile file)
	{
		if (_files.Where(x => x.Key.StartsWith("Banner")).Count() >= 3)
		{
			Snackbar.Clear();
			Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
			Snackbar.Add($"Cantidad de imagenes permitidad 3", Severity.Warning);
			DeshabilitarBottonBanner = true;
			return;
		}

		DeshabilitarBottonBanner = false;

		if (!file.ContentType.EndsWith("jpeg") && !file.ContentType.EndsWith("jpg") && !file.ContentType.EndsWith("png"))
		{
			Snackbar.Clear();
			Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
			Snackbar.Add($"{file.Name} Con extension no permitida", Severity.Error);
			return;
		}

		if (file.Size > 512000)
		{
			Snackbar.Clear();
			Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
			Snackbar.Add($"Tamaño maximo es 500KB", Severity.Warning);

			var convert = file.Size / 1024;

			Snackbar.Add($"{file.Name} con {convert} KB", Severity.Warning);
			return;
		}

		if (_files.ContainsKey($"Banner_{file.Name}"))
		{
			return;
		}

		_files.Add($"Banner_{file.Name}", file);

		Snackbar.Clear();
		Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomEnd;
		Snackbar.Add($"{file.Name} Cargado correctamente", Severity.Success);
	}

