						</MudButton>
					</ButtonTemplate>
				</MudFileUpload>

				@if (_files != null && _files.Count > 0)
				{
					<MudList>
						@foreach (var file in _files)
						{
							if (file.Key == "Logo")
							{
								<MudChip Color="Color.Default" OnClose="() => EliminarLogo(file.Value)">
