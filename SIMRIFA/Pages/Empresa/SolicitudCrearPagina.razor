			</MudItem>

			<MudItem sm="12" lg="6" xl="6">
				<MudTextField @bind-Value="@compraPagina.CompraPagInfoPagina.PrecioTicket" Label="Precio Ticket"
							  HelperText="Valor del ticket" Variant="Variant.Filled" Required RequiredError="Precio Ticket Requerido" />

			</MudItem>

			<MudItem sm="12" lg="6" xl="6">
				<MudTextField @bind-Value="@compraPagina.CompraPagInfoPagina.Moneda" Label="Tipo moneda" 
