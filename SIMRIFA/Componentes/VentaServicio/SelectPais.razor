@using MudBlazor



<MudSelect T="string" Value="@PaisSelect" ValueChanged="@OnChangePais" Label="Pais" AnchorOrigin="Origin.BottomCenter" Variant="Variant.Filled" Clearable Required="@Requerido" RequiredError="@MensajeError">

	@if (Paises != null && Paises.Count > 0)
	{
		@foreach (var item in Paises)
		{
			<MudSelectItem T="string" Value="item">@item</MudSelectItem>
		}
	}

</MudSelect>

@code {


	[Parameter]
	public bool Requerido { get; set; }

	[Parameter]
	public string MensajeError { get; set; } = "Campo requerido";

	private string PaisSelect;
	private List<string> Paises = new List<string>();

	[Parameter]
	public EventCallback<string> OnChange { get; set; }


	protected override async Task OnInitializedAsync()
	{

		Paises.Add("Colombia");
		Paises.Add("Mexico");
		Paises.Add("Chile");
		Paises.Add("Argentina");
		Paises.Add("Peru");

	}

	private void OnChangePais(string resp)
	{
		PaisSelect = resp;
		OnChange.InvokeAsync(resp);
	}

}
